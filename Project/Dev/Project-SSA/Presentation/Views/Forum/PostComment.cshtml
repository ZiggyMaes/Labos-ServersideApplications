@model Presentation.Models.Message

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Comment on this discussion...</h4>
        <hr />
        <input type="hidden" name="ParentId" value="@ViewBag.ThreadId" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group form-horizontal">
            <div class="col-md-12">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control form-horizontal col-sm-12", rows = 8 } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <input type="submit" value="Post reply" class="btn btn-primary center-block" />
        </div>
    </div>
}